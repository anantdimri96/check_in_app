<div class=" container-fluid   container-fixed-lg">
            <div class="row">

              <div class="col-lg-6">
                <!-- START card -->
                <div class="card card-transparent">
                  <div class="card-header ">
                    <div class="card-title">
                    </div>
                    <div class="tools">
                      <a class="collapse" href="javascript:;"></a>
                      <a class="config" data-toggle="modal" href="#grid-config"></a>
                      <a class="reload" href="javascript:;"></a>
                      <a class="remove" href="javascript:;"></a>
                    </div>
                  </div>
                  <div class="card-block">
                    <div class="table-responsive">
                      <div id="condensedTable_wrapper" class="dataTables_wrapper no-footer">
                        <table class="table table-hover table-condensed dataTable no-footer" id="condensedTable" role="grid">
                        <thead>
                          <tr role="row">
                            <th style="width:30%" class="sorting_asc" tabindex="0" aria-controls="condensedTable" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Task: activate to sort column descending">TASK</th>
                            <th style="width: 90px;" class="sorting" tabindex="0" aria-controls="condensedTable" rowspan="1" colspan="1" aria-label="Key: activate to sort column ascending">COMPLETED</th>

                            <% if logged_in?(:editor)%>
                            <th style="width: 133px;" class="sorting" tabindex="0" aria-controls="condensedTable" rowspan="1" colspan="1" aria-label="Condensed: activate to sort column ascending">STATUS</th></tr>

                            <%end%>
                          </tr>

                        </thead>
                        <tbody>


                          <% @tasks.each do |task| %>

                            <tr role="row" class="odd">


                              <td class="v-align-middle semi-bold sorting_1"><%=task.to_do%>	</td>
                              <td class="v-align-middle" ><%=task.completed%>	</td>




                              <td class="v-align-middle semi-bold"> <input type="checkbox" id="checkbox-users-show" <%= task.checkbox == true ? 'checked': '' %> onclick="sendCheckRequest(<%=task.id%>)">
                               </td>




                                </tr>
                          <%end%>


                      </tbody>
                      </table></div>
                    </div>
                  </div>
                </div>
                <!-- END card -->
              </div>
            </div>
          </div>



<%= link_to "BACK",people_path %>

<script type="text/javascript">
function sendCheckRequest(TaskId){
	 $.ajax({
		url: '../insert_checkbox',
		type: "GET",
		data: {'plan_id': TaskId},
		dataType: "json",

    success: function(data){
			alert("Success");
		},
    error: function(data){
      alert("failure");
    }
	});
}
</script>
